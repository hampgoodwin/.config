// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "margin-top": 5,
    "margin-left": 10,
    "margin-right": 10,
    "height": 40, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 10, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "gamemode",
        "hyprland/workspaces",
        "tray",
        "mpris",
    ],
    "modules-center": [
        "hyprland/window",
    ],
    "modules-right": [
        "pulseaudio",
        "backlight",
        "network",
        "temperature",
        "battery",
        "keyboard-state",
        "clock",
    ],
    // Modules Configuration

    // LEFT
    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "glyph": "Ôû≥",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 20,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    },
    "hyprland/workspaces": {
      "format": "{icon}",
      "on-click": "activate",
      "format-icons": {
        "active": "ÔÑë ",
      },
      "sort-by-number": true,
      "persistent-workspaces": {
        "*": 4, // 5 workspaces by default on every monitor
        "HDMI-A-1": 3 // but only three on HDMI-A-1
      },
    },
    "tray": {
        "icon-size": 35,
        "spacing": 20
    },
    "mpris": {
	"player": "spotify",
	"format": "{player_icon}{status_icon}{artist} - {title} ({position}/{length})",
	"format-paused": "{player_icon}{status_icon}<i>{artist} - {title} ({position}/{length})</i>",
    	"player-icons": {
    		"default": " ‚ñ∂ ",
		"spotify": " ÔÜº "
    	},
    	"status-icons": {
    		"paused": "‚è∏",
		"playing": " ‚ñ∂ "
    	},
    	"ignored-players": ["firefox"]
    },

    // MIDDLE
    "hyprland/window": {
        "icon": true,
        "icon-size": 22,
        "rewrite": {
            "": "Hyprland",
            "(.*) ‚Äî Mozilla Firefox": "$1 - ü¶ä",
            "(.*) - Discord": "$1 - Û∞ôØ ",
            "^$": "üëæ",
        },
    },

    // RIGHT
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}  {format_source}",
        "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon} Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "backlight": {
        "device": "amdgpu_bl1",
        "format": "{percent}% {icon}",
        "format-icons": ["ÔÜÖ", "ÔÑë"],
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} {icon}", "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip": true,
        "tooltip-format": "ÔÑ© {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "‚ö† Disconnected",
        // "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "format-icons": {
            "wifi": "Ôá´ "
        },
        "on-click": "kitty -e nmtui"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon} ",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "battery": {
        "bat": "BAT1",
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
   "clock": {
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format-alt": "{:%Y-%m-%d}"
    },
}
